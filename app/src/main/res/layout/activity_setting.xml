<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            style="@style/TitleStyle"
            android:text="设置中心" />

        <com.solomon.mobileguard.view.SettingItemView
            xmlns:mobilesafe = "http://schemas.android.com/apk/res/com.solomon.mobileguard"
            android:id="@+id/siv_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mobilesafe:destitle = "自动更新设置"
            mobilesafe:desoff = "自动更新已关闭"
            mobilesafe:deson = "自动更新已开启"/>
        <com.solomon.mobileguard.view.SettingItemView
            xmlns:mobilesafe = "http://schemas.android.com/apk/res/com.solomon.mobileguard"
            android:id="@+id/siv_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mobilesafe:destitle = "电话归属地显示设置"
            mobilesafe:desoff = "归属地显示已关闭"
            mobilesafe:deson = "归属地显示已开启"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>